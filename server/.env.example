# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration
DBURL=mongodb://localhost:27017/ai-business-toolkit

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-make-it-very-long-and-random
JWT_EXPIRATION=7d

# AI Model Configuration
GEMINI_API_KEY=your-gemini-api-key-here
OLLAMA_URL=http://localhost:11434

# Email Configuration (for notifications)
GMAIL_ADDRESS=your-email@gmail.com
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REFRESH_TOKEN=your-google-refresh-token

# Stripe Configuration (for payments)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Vector Database Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in ms
RATE_LIMIT_MAX_REQUESTS=100   # max requests per window

# Logging Configuration
LOG_LEVEL=info

# Session Configuration
SESSION_SECRET=your-session-secret-key

# Security Configuration
BCRYPT_SALT_ROUNDS=12

# External API Configuration
OPENAI_API_KEY=your-openai-api-key-if-needed

# Image Generation Configuration (if using external service)
STABILITY_AI_API_KEY=your-stability-ai-key
MIDJOURNEY_API_KEY=your-midjourney-key

# Analytics Configuration
GOOGLE_ANALYTICS_ID=your-analytics-id

# Feature Flags
ENABLE_VECTOR_SEARCH=true
ENABLE_IMAGE_GENERATION=true
ENABLE_EMAIL_CAMPAIGNS=true
ENABLE_CHATBOT=true

# Performance Configuration
MAX_CONCURRENT_AI_REQUESTS=5
AI_REQUEST_TIMEOUT_MS=30000

# Development Settings
DEBUG=true
ENABLE_SWAGGER_DOCS=true
